{
  "name": "@maastrich/zod-resolve",
  "version": "0.2.1",
  "private": false,
  "description": "Type-safe Zod schema resolver with path notation support for nested objects, arrays, tuples, and unions",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "packageManager": "pnpm@10.8.1",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "bun test",
    "type-check": "pnpm run type-check:lib && pnpm run type-check:tests",
    "type-check:lib": "tsc --noEmit -p tsconfig.json",
    "type-check:tests": "tsc --noEmit -p tsconfig.tests.json",
    "lint": "pnpm run lint:knip && pnpm run lint:sherif && pnpm run lint:oxlint",
    "lint:fix": "pnpm run lint:knip:fix && pnpm run lint:sherif:fix",
    "lint:knip": "knip --config ./configs/knip.json",
    "lint:knip:fix": "knip --config ./configs/knip.json --fix",
    "lint:sherif": "sherif -r root-package-private-field -r root-package-dependencies",
    "lint:sherif:fix": "sherif --fix -r root-package-private-field -r root-package-dependencies",
    "lint:oxlint": "oxlint src tests --config ./configs/oxlint.json",
    "lint:oxlint:fix": "oxlint src tests --config ./configs/oxlint.json --fix",
    "format": "prettier --check . --config ./configs/.prettierrc.json",
    "format:fix": "prettier --write . --config ./configs/.prettierrc.json",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm run build && changeset publish",
    "prepack": "pnpm run build",
    "prepublishOnly": "pnpm run format && pnpm run type-check && pnpm run lint"
  },
  "keywords": [
    "zod",
    "schema",
    "validation",
    "typescript",
    "type-safe",
    "resolver",
    "path",
    "nested",
    "array",
    "tuple",
    "union",
    "flatten",
    "sub-schema",
    "dot-notation",
    "type-safety"
  ],
  "author": {
    "name": "Mathis Pinsault",
    "email": "pinsaultm@gmail.com",
    "url": "https://github.com/maastrich"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maastrich/zod-resolve.git"
  },
  "bugs": {
    "url": "https://github.com/maastrich/zod-resolve/issues"
  },
  "homepage": "https://github.com/maastrich/zod-resolve#readme",
  "license": "MIT",
  "peerDependencies": {
    "zod": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/bun": "^1.3.0",
    "@types/node": "^20.19.22",
    "knip": "^5.66.2",
    "oxlint": "^1.23.0",
    "prettier": "^3.6.2",
    "sherif": "^1.6.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "type-testing": "^0.2.0",
    "typescript": "^5.9.3",
    "zod": "^3.25.76"
  },
  "dependencies": {
    "utility-types": "^3.11.0"
  }
}
